# This might be sourced by dash, ash, sh, or bash. Careful on syntax sugar
TZ=UTC
LANG="C"
PATH=/sbin:/usr/sbin:/usr/local/sbin:/bin:/usr/bin:/usr/local/bin

if [ -r /etc/default/locale ]; then
    . /etc/default/locale || true
    if command -v locale >/dev/null; then
        if locale -a | grep -q en_US.utf8; then
            LANG="en_US.utf8"
        fi
    fi
    export LC_ALL="${LANG}"
fi

PAGER=less
MANPAGER=less
LESS="FRiX"
EDITOR=vi
if [ -e /usr/bin/vim ]; then
    EDITOR=vim
fi
HISTSIZE=1000
HISTFILESIZE=1000
HISTTIMEFORMAT="%F %T "
PS1='$ '

if [ "`id -u`" -eq 0 ]; then
    PS1='# '
    mesg n || true
else
    TZ="America/New_York"
    PATH="$PATH:/usr/local/games:/usr/games"

    # set PATH so it includes user's private bin if it exists
    if [ -d "$HOME/bin" ] ; then
        PATH="$HOME/bin:$PATH"
    fi

    # set PATH so it includes user's private bin if it exists
    if [ -d "$HOME/.local/bin" ] ; then
        PATH="$HOME/.local/bin:$PATH"
    fi
fi

export TZ LANG
export PAGER MANPAGER LESS EDITOR
export HISTSIZE HISTFILESIZE HISTTIMEFORMAT
export PS1 PATH
